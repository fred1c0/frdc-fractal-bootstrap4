<div class="alert alert-{% if alert.modifier is defined %}{{ alert.modifier }}{% else %}primary{% endif %}{% if alert.dismissible %} alert-dismissible fade show{% endif %}" role="alert">
  {{ alert.text }}
  {% if alert.dismissible %}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
  {% endif %}
</div>
